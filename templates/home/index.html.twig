{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}


{% block title %}Bienvenue sur SnowTricks !{% endblock %}

{% block body %}
    <div class="container-fluid ps-0 pe-0">
        <div class="backgroundMain">
            <div class="titleMain d-flex justify-content-center align-items-center">
                <h1 class="display-3">Venez apprendre de nouvelles figures !</h1>
            </div>
        </div>
    </div>

    <section id="allTricks" class="d-flex justify-content-center mt-5 flex-wrap">
        {% for trick in tricks %}
            <div class="card mb-4 ms-3 me-3 cardTrick">
                <img class="card-img-top" src="..." alt="Card image cap">
                <div class="card-body d-flex justify-content-between">
                    <div class="titleTrick w-75">
                        <h5 class="card-title"><a href="{{ path('show_trick', {id: trick.id}) }}">{{trick.name}}</a></h5>
                    </div>
                    <div class="optionTrick w-25">
                        <span><a href="{{ path('edit_trick', {id: trick.id}) }}"><img class="editIcon" src="{{ asset('build/images/icones/edit.svg') }}"></a></span>
                        <span><a href="{{ path('delete_trick', {id: trick.id}) }}"><img class="deleteIcon" src="{{ asset('build/images/icones/delete.svg') }}"></a></span>
                    </div>
                </div>
            </div>
        {% endfor %}
        
    </section>
    <section id="moreTricks">
        <button type="button" class="btn btn-primary" id="loadMoreTricks">Load More</button>
    </section>
{% endblock %}
