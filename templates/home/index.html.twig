{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}


{% block title %}Bienvenue sur SnowTricks !{% endblock %}

{% block body %}
    <div class="container-fluid ps-0 pe-0">
        <div class="backgroundMain">
            <div class="titleMain d-flex justify-content-center align-items-center">
                <h1 class="display-3">Viens apprendre de nouvelles figures !</h1>
            </div>
            <div class="d-flex justify-content-end">
                <a href="#allTricks"><img id="arrowDownImg" src="build/images/icones/arrow-down.svg" ></a>
            </div>
        </div>
    </div>

    <section id="allTricks" class="row mt-5 d-flex justify-content-center">
        <div class="col-lg-12 col-md-10 col-sm-1 flex-wrap d-flex justify-content-center">
            {{ include ('trick/elements.html.twig') }}
        </div>
    </section>

    {% if totalAllTricks > totalDisplayTricks %}
        <section class="d-flex justify-content-center" id="moreTricks">
            <button class="btn btn-primary" id="loadMoreTricks">Plus de tricks</button>
            <input type="hidden" id="totalDisplayTricks" value="{{ totalDisplayTricks }}">
            <input type="hidden" id="totalAllTricks" value="{{ totalAllTricks }}">
            <input type="hidden" id="tricksPerLoading" value="{{ tricksPerLoading }}">
        </section>
    {% endif %}

    <div class="container-fluid">
        <div id="arrowUpContainer" class="row d-flex justify-content-end">
            <div class="col-1" id="arrowUp">
                <a href="#allTricks"><img id="arrowUpImg" src="build/images/icones/arrow-up.svg" ></a>
            </div>
        </div>
    </div>
{% endblock %}

