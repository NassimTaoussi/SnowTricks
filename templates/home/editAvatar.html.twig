{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}


{% block title %}Modifie ton avatar !{% endblock %}

{% block body %}
    {% if is_granted("ROLE_USER") %}
        <div class ="d-flex justify-content-center w-100 h-100 mt-4">
        {% if (user.avatar is null) or (user.avatar is empty) %}
            <div class="w-25 h-25">
                <img class="img-fluid" src="{{ asset('build/images/icones/user.svg') }}">
            </div>
        {% else %}
            <div class="w-25 h-25">
                <img class="img-fluid" src="{{ asset('uploads/' ~ user.avatar) }}">
            </div>
        {% endif %}
        </div>
        
        <div class="d-flex justify-content-center">
        {{ form_start(form) }}
            {{ form_widget(form._token) }}
            <div>
            {{ form_widget(form.avatar, {'attr': {'class': 'mt-3 w-100'}}) }}</br>
            </div>
            <button type="submit" class="btn btn-primary ms-4 w-100 mt-3">Valider</button>
        {{ form_end(form, {render_rest: false}) }}
        </div>
    {% endif %}
{% endblock %}