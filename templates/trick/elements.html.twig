{% for trick in tricksToDisplay %}
    <div class="card mb-4 ms-3 me-3 cardTrick">
        <img class="img-fluid h-75" src="{{ asset("uploads/" ~ trick.cover.name) }}" alt="">
        <div class="card-body d-flex justify-content-between">
            <div class="titleTrick w-75">
                <h5 class="card-title"><a class="text-dark" href="{{ path('show_trick', {id: trick.id}) }}">{{trick.name}}</a></h5>
            </div>
            <div class="optionTrick w-25">
                <span><a href="{{ path('edit_trick', {id: trick.id}) }}"><img class="editIcon" src="{{ asset('build/images/icones/edit.svg') }}"></a></span>
                <span data-bs-toggle="modal" data-bs-target="#deleteModal"><img class="deleteIcon" src="{{ asset('build/images/icones/delete.svg') }}"></span>
            </div>
        </div>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Suppression d'un trick</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir supprimer ce trick : "{{ trick.name }}"</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary"><a class="text-white text-decoration-none" href="{{ path('delete_trick', {id: trick.id}) }}">Supprimer</a></button>
                </div>
            </div>
        </div>
    </div>
{% endfor %}