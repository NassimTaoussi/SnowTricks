{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-center mt-3">Inscription</h1>

    <div class="row d-flex justify-content-center">
        <div class="col-3 ">
            {{ form_start(registrationForm) }}
                <div class="row mt-2">
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control text-center'}}) }}
                </div>
                <div class="row mt-4">
                    {{ form_row(registrationForm.username, {'attr': {'class': 'form-control text-center'}})}}
                </div>
                <div class="row mt-4">
                    {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control text-center'}})}}
                </div>
                <div class="row d-flex justify-content-center mt-4">
                    <div class="col-12 d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">S'inscrire</button>
                    </div>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>

{% endblock %}
