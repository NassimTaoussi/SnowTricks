{% for comment in commentsToDisplay %}
    <div class="card cardComment mt-3">
        <div class="card-body">
            <div class="d-flex flex-start align-items-center">
                <img class="rounded-circle shadow-1-strong me-3" src="" alt="avatar" width="60" height="60" />
                <div>
                    <h6 class="fw-bold text-primary mb-1">{{ comment.author}}</h6>
                    <p class="text-muted small mb-0">{{ comment.createdAt|date('d/m/Y') }}</p>
                </div>
            </div>
            <p class="mt-3">{{ comment.message }}</p>
        </div>
    </div>
{% endfor %}
